{
  "name": "starlight-multiple-sidebar-dropdown-monorepo",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Starlight plugin to split your docs page into multiple subpages and switch between them with a dropdown menu in the sidebar.",
  "author": "trueberryless (https://trueberryless.org)",
  "type": "module",
  "scripts": {
    "test": "pnpm --stream -r test",
    "lint": "pnpm -r lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@hideoo/eslint-config": "^3.0.1",
    "@hideoo/prettier-config": "^2.0.0",
    "@hideoo/tsconfig": "^2.0.1",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.12.1",
  "private": true,
  "sideEffects": false,
  "keywords": [
    "starlight",
    "plugin",
    "sidebar",
    "subpages",
    "sections",
    "dropdown",
    "documentation",
    "astro"
  ],
  "homepage": "https://github.com/trueberryless-org/starlight-multiple-sidebar-dropdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/HiDeoo/starlight-multiple-sidebar-dropdown.git"
  },
  "bugs": "https://github.com/HiDeoo/starlight-multiple-sidebar-dropdown/issues",
  "lint-staged": {
    "*": [
      "prettier -w -u --cache",
      "eslint --cache --no-warn-ignored --max-warnings=0"
    ]
  }
}
